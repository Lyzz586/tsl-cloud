/**index.wxss**/
.page {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.magazine {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.magazine .title {
    margin-top: 124rpx;
    margin-bottom: 50rpx;
    font-size: 42rpx;
}

.magazine .cover {
    width: 440rpx;
    height: 558rpx;
    margin-bottom: 20rpx;
    box-shadow: var(--tw-ring-offset-shadow, 0 0 #0000), var(--tw-ring-shadow, 0 0 #0000), var(--tw-shadow);
}

.magazine .name {
    font-size: 22rpx;
    margin-bottom: 126rpx;
}

.icon-banner {
    width: 656rpx;
    height: 280rpx;
    margin-bottom: 50rpx;
    position: relative;
    background-color: rgba(0, 0, 0, .06);
    border-radius: 20rpx;
}

.icon-banner .banner-bg {
    width: 656rpx;
    height: 280rpx;
    position: absolute;
    top: 0;
    right: 0;
    border-radius: 20rpx;
}

.icon-banner .credit-card {
    width: 180rpx;
    height: 114rpx;
    position: absolute;
    right: 48rpx;
    top: 50%;
    transform: translateY(-50%);
}

.icon-banner .content {
    position: absolute;
    top: 50%;
    left: 50rpx;
    transform: translateY(-50%);
}

.icon-banner .content .title {
    margin-bottom: 26rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.icon-banner .content .subtitle {
    font-size: 26rpx;
}

.icon-box-area {
    width: 100%;
    display: flex;
    justify-content: space-evenly;
    align-items: center;
}

.icon-box-area .icon-box {
    width: 160rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.icon-box .icon {
    width: 98rpx;
}

.icon-box .cicle {
    width: 64rpx;
    height: 64rpx;
    padding: 19rpx 0;
}

.icon-box .title {
    font-size: 30rpx;
}

.popup-menu {
    width: 100%;
    padding: 50rpx;
    box-sizing: border-box;
}

.popup-menu .header {
    width: 100%;
    display: flex;
    margin-bottom: 40rpx;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.popup-menu .header .title {
    font-size: 27rpx;
    font-weight: bold;
}

.popup-menu .header .close-icon {
    width: 50rpx;
    height: 50rpx;
}

.popup-menu .content {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.popup-menu .content .item-box {
    width: 100%;
    display: flex;
    margin-bottom: 40rpx;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    box-sizing: border-box;
    border: 1rpx solid #d1d1d1;
    border-radius: 25rpx;
}

.popup-menu .content .item-box:hover {
    border: 1px solid springgreen;
}

.popup-menu .content .item-box .title {
    font-size: 28rpx;
    font-weight: bold;
}

.popup-menu .content .item-box image{
    width: 293rpx;
    height: 191rpx;
}