/* pages/map/location.wxss */
.location-page {
    padding: 20rpx;
    padding-left: 22rpx;
    box-sizing: border-box;
}

.location-page .header {
    width: 100%;
    height: 180rpx;
    display: flex;
    justify-content: space-between;
    border-bottom: 1px solid rgba(100, 100, 100, .2);

}

.location-page .header .content {
    width: 100%;
    display: flex;
    padding-left: 5rpx;
    flex-direction: column;
}

.location-page .header .content .name {
    margin-bottom: 10rpx;
    padding-left: 3rpx;
    font-size: 34rpx;
    font-weight: bold;
}

.location-page .header .content .address {
    margin-bottom: 20rpx;
    padding-left: 2rpx;
    font-size: 28rpx;
    color: #888;
}
.location-page .header .content .marker-category {
    display: flex;
    flex-direction: row;
}

.location-page .header .content .marker-category .marker-category-item {
    margin-right: 15rpx;
    padding: 6rpx;
    font-size: 18rpx;
    line-height: 18rpx;
    color: #999;
    border: 1px solid rgba(100, 100, 100, .3);
    border-radius: 10rpx;
}

.location-page .header .location {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
}

.location-page .header .location>image {
    width: 50rpx;
    height: 50rpx;
    margin-bottom: 8rpx;
}

.location-page .header .location .distance {
    font-size: 24rpx;

}

.location-page .info-area {
    display: flex;
    flex-direction: column;
    
}

.location-page .info-area .info-box {
    margin-top: 65rpx;
}

.location-page .info-area .info-box .title{
    margin-bottom: 15rpx;
    font-size: 28rpx;
    font-weight: bold;
}

.location-page .info-area .info-box .content {
    font-size: 28rpx;
}