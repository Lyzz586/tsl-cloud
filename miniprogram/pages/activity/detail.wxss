.activity-detail-page {
    width: 100vw;
    height: 100vh;
}

.activity-detail-page>image {
    width: 100vw;
    height: 350rpx;
    margin-bottom: 30rpx;
}

.main {
    display: flex;
    flex-direction: column;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.main .header {
    display: flex;
    flex-direction: column;
    margin-bottom: 40rpx;
}

.header .list-item {
    display: flex;
    flex-direction: column;
    margin-bottom: 45rpx;
}

.header .list-item .name {
    font-size: 34rpx;
    font-weight: bold;
    margin-bottom: 15rpx
}

.header .list-item .label {
    height: 26rpx;
    width: 100rpx;
    margin-bottom: 15rpx;
    display: flex;
    border: 1rpx solid #222;
}

.header .list-item .label .icon {
    height: 26rpx;
    width: 26rpx;
    margin-left: 1rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #999;
}

.header .list-item .label .icon>image {
    height: 22rpx;
}

.header .list-item .label .label-text {
    margin: 0 auto;
    height: 100%;
    font-size: 16rpx;
    line-height: 26rpx;
}

.header .list-item .date-area {
    margin-bottom: 10rpx;
    display: flex;
    align-items: center;
}

.header .list-item .date-area .date {
    margin-right: 20rpx;
    font-size: 26rpx;
    color: #444;
}

.header .list-item .date-area .tip {
    padding: 0 5rpx;
    font-size: 20rpx;
    color: #fff;
    background-color: #111;
}

.header .list-item .date-area .tip.full {
    padding: 0 5rpx;
    font-size: 20rpx;
    color: rgba(153, 153, 153, 0.616);
    background-color: rgba(223, 219, 219, 0.37);
}

.header .list-item .address {
    font-size: 24rpx;
    color: #888;
}

.main .detail {
    margin-bottom: 60rpx;
}

.main .detail .label {
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
}

.main .footer {
    margin-bottom: 30rpx;
}

.footer .registration-time {
    padding: 0 30rpx;
    margin-bottom: 10rpx;
    font-size: 26rpx;
    text-align: center;
    color: #555;
}

.footer .registration-btn {
    width: 100%;
    height: 80rpx;
    text-align: center;
    background-color: #486ada;
    font-size: 30rpx;
    line-height: 80rpx;
    color: #fff;
    font-weight: bold;
    border-radius: 80rpx;
}