/* pages/test-drive/index.wxss */
.form-tip {
    margin: 40rpx auto;
    font-size: 26rpx;
    color: #888888;
    text-align: center;
}

.form {
    padding: 0 30rpx;
}

.input-item {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.input-item .label {
    padding: 20rpx 25rpx;
    font-size: 26rpx;
    color: #888888;
}

.input-item input {
    padding: 24rpx 25rpx;
    font-size: 30rpx;
    background-color: #f7f7f7;
    border-radius: 50rpx;
    color: #000000;
}

.name-area {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.name-area .name-box {
    width: 43%;
}

.form .form-item {
    width: 100%;
    display: flex;
    margin-top: 30rpx;
    align-items: center;
}

.form-item .label {
    margin-left: 15rpx;
    font-size: 26rpx;
}

.form .bottom-tips {
    margin: 36rpx auto 50rpx;
    color: #777777;
    font-size: 24rpx;
}

.form .test-drive-btn {
    width: 100%;
    height: 80rpx;
    text-align: center;
    background-color: #486ada;
    font-size: 30rpx;
    line-height: 80rpx;
    color: #fff;
    font-weight: bold;
    border-radius: 80rpx;
}

.get-phone-btn {
    width: 150rpx;
    padding: 3rpx 5rpx;
    font-size: 20rpx;
    background-color: #e2e2e2;
}